{
  "installCommand": "yum -y install openssh-clients",
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.0"
    }
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/public/index.html" },
    { "src": "^/install$", "method": ["POST"], "dest": "/api/install.php" },
    { "src": "^/migrate$", "method": ["POST"], "dest": "/api/migrate.php" },
    { "src": "^/play$", "method": ["GET"], "dest": "/api/play.php" }
  ]
}